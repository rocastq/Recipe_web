<!DOCTYPE html>
<html>
<head>
  <title>Recipes</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
</head>
<body>
<div class="container mt-4">
  <h1>Recipes</h1>
  <a href="/recipes/new" class="btn btn-primary">Add Recipe</a>
  <a href="/logout" class="btn btn-secondary float-end">Logout</a>
  <h2 class="mt-4">Public Recipes</h2>
  <div class="row">
    <% publicRecipes.forEach(r => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100" style="cursor:pointer" onclick="window.location='/recipes/<%= r._id %>'">
          <% if (r.image) { %>
            <img src="<%= r.image %>" class="card-img-top" style="height: 200px; object-fit: cover;">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= r.title %></h5>
            <p class="card-text"><%= r.description %></p>
            <small>By <%= r.username %></small>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <h2 class="mt-4">Your Private Recipes</h2>
  <div class="row">
    <% privateRecipes.forEach(r => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100" style="cursor:pointer" onclick="window.location='/recipes/<%= r._id %>'">
          <% if (r.image) { %>
            <img src="<%= r.image %>" class="card-img-top" style="height: 200px; object-fit: cover;">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= r.title %></h5>
            <p class="card-text"><%= r.description %></p>
            <div class="d-flex justify-content-between">
              <a href="/recipes/<%= r._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/recipes/<%= r._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
</body>
</html>
